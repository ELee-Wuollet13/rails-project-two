<% if user_signed_in? %>

<h1>Add a new review:</h1>


<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :rating %>
  <%= f.text_area :rating %>
  <p><%= f.submit %></p>
<% end %>


<% else %>
<p>Sorry, you need to log in to leave a comment</p>
<% end %>
